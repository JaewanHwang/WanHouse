<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.mapper.MemberMapper">


    <select id="selectMember" parameterType="string" resultType="MemberDto">
        select * from member where id = #{memberId}
    </select>

    <insert id="insertMember" parameterType="MemberDto">
        insert into member values(#{id}, #{pw}, #{name}, #{addr}, #{phone})
    </insert>

    <delete id="deleteMember" parameterType="string">
        delete from member where id = #{id}
    </delete>

    <update id="updateMember" parameterType="MemberDto">
        update member set pw = #{pw}, name = #{name}, addr = #{addr}, phone = #{phone} where id = #{id}
    </update>

</mapper>